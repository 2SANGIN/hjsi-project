<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip"
    android:gravity="top|center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/set_resume_btn"
        android:layout_width="200px"
        android:layout_height="70px"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_set_resume"
        />
    <Button
        android:id="@+id/set_help_btn"
        android:layout_width="200px"
        android:layout_height="70px"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_set_help"
        />
    
    <ToggleButton
        android:id="@+id/set_sound_btn"
        android:layout_width="200px"
        android:layout_height="70px"
        android:layout_marginBottom="10dp"
        android:background="@drawable/img_set_soundon"
        android:textOff=""
		android:textOn=""
        />
    
    <Button
        android:id="@+id/set_credits_btn"
        android:layout_width="200px"
        android:layout_height="70px"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_set_credits"
        />
    
    <Button
        android:id="@+id/set_quit_btn"
        android:layout_width="200px"
        android:layout_height="70px"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_set_quit"
        />

</LinearLayout>